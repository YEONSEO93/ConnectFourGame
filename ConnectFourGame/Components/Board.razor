@using ConnectFour
@inject GameState State

<h3>Board</h3>
<HeadContent>
    <style>
        :root {
            --board-bg: #4a07c8;  
            --player1: #39ff14;      /** Player 1's piece color **/
            --player2: #00ffff;     /** Player 2's piece color **/
        }
    </style>
</HeadContent>

<div>
   <div class="board">
      @for (var i = 0; i < 42; i++)
      {
         <span class="container">
            <span></span>
         </span>
      }
   </div>
</div>

@code {
    protected override void OnInitialized()
    {
        State.ResetBoard();
    }
}